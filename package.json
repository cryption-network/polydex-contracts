{
  "name": "polydex-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "coverage": "hardhat coverage",
    "lint": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "prepublish": "rimraf build contracts/build artifacts cache",
    "prepare": "env COMPILE_MODE=production npm run compile",
    "test": "npx hardhat test",
    "deployFactory:test": "HARDHAT_NETWORK=mumbai npx hardhat run scripts/deployFactory.js",
    "deployRouter:test": "HARDHAT_NETWORK=mumbai npx hardhat run scripts/deployRouter.js",
    "deployFactory:main": "HARDHAT_NETWORK=matic npx hardhat run scripts/deployFactory.js",
    "deployRouter:main": "HARDHAT_NETWORK=matic npx hardhat run scripts/deployRouter.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.3",
    "hardhat": "^2.2.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0",
    "bignumber.js": "^9.0.1",
    "chalk": "^4.1.1",
    "dotenv": "^8.2.0"
  }
}
